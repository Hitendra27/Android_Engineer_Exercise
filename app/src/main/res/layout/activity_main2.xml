<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_an_account"
        android:text="Create an account"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/museosans_300"
        android:layout_margin="20dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_chevron_left_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/create_an_account"/>

    <TextView
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_an_account"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="Email address"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/museosans_300"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_email"
        android:layout_below="@id/email_address"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:padding="15dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_password"
        android:layout_below="@id/enter_email"
        android:text="Create password"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/museosans_300"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_password"
        android:layout_below="@id/create_password"
        android:background="@color/white"
        android:textColor="@color/black"
        android:padding="15dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repeat_password"
        android:layout_below="@id/enter_password"
        android:text="Repeat password"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/museosans_300"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repeatpassword"
        android:layout_below="@id/repeat_password"
        android:background="@color/white"
        android:textColor="@color/black"
        android:padding="15dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_below="@id/repeatpassword"
        android:text="Your password should have a
minimum of 8 charecters and contain at least one number,
one uppercase and one lower case letter. You can use special characters."
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/museosans_300"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search"
        android:layout_below="@id/text1"
        android:backgroundTint="@color/teal_200"
        android:text="Next"
        android:fontFamily="@font/museosans_300"
        android:textColor="@color/black"
        android:padding="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>



</RelativeLayout>